<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mulai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.internal.programming.handsomekids.Mulai">

    <ImageView
        android:id="@+id/img_Background2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/img_BelajarDanBermain"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_Play"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@id/img_BelajarDanBermain"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/img_Mulai"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/img_Play"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
